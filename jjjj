	<batch:job id="repeatMessage">
		<batch:step id="repeat" next="steprepeat">
			<batch:tasklet>
				<batch:chunk reader="messageReader" writer="messageWriter" 
					commit-interval="10" />
			</batch:tasklet>
		</batch:step>

		<batch:step id="steprepeat">
			<batch:tasklet ref="timeTask" />
		</batch:step>
	</batch:job>


