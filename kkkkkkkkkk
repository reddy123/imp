create product table:mysql
======================

 CREATE TABLE PRODUCT(PRODUCTID VARCHAR(20),PRODUCTNAME VARCHAR(30),PRODUCTTYPE VARCHAR(30),DESCRIPTION VARCHAR(200),STATUS VARCHAR(20),VALIDDATE DATE,CREATEDBY VARCHAR(20), APPROVEBY VARCHAR(20),TASKID VARCHAR(20),REVIEWERREMARKS VARCHAR(200), MANAGERREMARKS VARCHAR(200),SUPPLIERNAME VARCHAR(50),SUPPLIERADDRESS VARCHAR(100),SUPPLIERCOUNTRY VARCHAR(50),PRODUCTSPECIFICCOUNTRY VARCHAR(50), PRODUCTSUBCATAGRY VARCHAR(50) , PRODUCTCATAGRY VARCHAR(50) );


oracle
=====

create HISTORY_PRODUCT:oracle
======================
CREATE TABLE HISTORY_PRODUCT
  (
    "PRODUCTID"   VARCHAR2(32 BYTE),
    "PROCESSID"   VARCHAR2(32 BYTE),
    "PRODUCTTYPE" VARCHAR2(50 BYTE),
    "PRODUCTNAME" VARCHAR2(50 BYTE),
    "CONTENTDATA" NVARCHAR2(2000),
    "CREATETIME" DATE DEFAULT SYSDATE
  );

create PRODUCT:oracle
=============
CREATE TABLE PRODUCT
  (
    "PRODUCTID"   VARCHAR2(32 BYTE),
    "PRODUCTNAME" VARCHAR2(30 BYTE),
    "PRODUCTTYPE" VARCHAR2(30 BYTE),
    "DESCRIPTION" VARCHAR2(200 BYTE),
    "STATUS"      VARCHAR2(20 BYTE),
    "VALIDDATE" DATE,
    "CREATEDBY"              VARCHAR2(20 BYTE),
    "APPROVEBY"              VARCHAR2(20 BYTE),
    "TASKID"                 VARCHAR2(20 BYTE),
    "REVIEWERREMARKS"        VARCHAR2(200 BYTE),
    "MANAGERREMARKS"         VARCHAR2(200 BYTE),
    "SUPPLIERNAME"           VARCHAR2(50 BYTE),
    "SUPPLIERADDRESS"        VARCHAR2(100 BYTE),
    "SUPPLIERCOUNTRY"        VARCHAR2(50 BYTE),
    "PRODUCTSPECIFICCOUNTRY" VARCHAR2(50 BYTE),
    "PRODUCTSUBCATAGRY"      VARCHAR2(50 BYTE),
    "PRODUCTCATAGRY"         VARCHAR2(50 BYTE),
    "PROCESS_INSTANCEID"     VARCHAR2(10 BYTE),
    "REMARKS"                VARCHAR2(200 BYTE)
  );

create PROCESS_LOCKING :
========================

CREATE TABLE PROCESS_LOCKING
  (
    "PRODUCTID"   VARCHAR2(32 BYTE),
    "PROCESSID"   VARCHAR2(32 BYTE),
    "PRODUCTNAME" VARCHAR2(50 BYTE),
    "RECORDTIME" DATE DEFAULT SYSDATE,
    "STATUS" NUMBER
  )


DROPING ACTIVITI TABLES:
=========================

drop table ACT_GE_PROPERTY;
drop table ACT_RU_JOB;
drop table ACT_GE_BYTEARRAY;
DROP TABLE ACT_HI_ACTINST;
DROP TABLE ACT_HI_ATTACHMENT;
DROP TABLE ACT_HI_COMMENT;
DROP TABLE ACT_HI_DETAIL;
DROP TABLE ACT_HI_PROCINST;
DROP TABLE ACT_HI_TASKINST;
DROP TABLE ACT_RU_TASK;
DROP TABLE ACT_RU_EXECUTION;
DROP TABLE ACT_ID_MEMBERSHIP;
DROP TABLE ACT_ID_USER;
DROP TABLE ACT_ID_GROUP;
DROP TABLE ACT_RU_IDENTITYLINK;
DROP TABLE ACT_RE_PROCDEF;
DROP TABLE ACT_RU_EVENT_SUBSCR;
DROP TABLE ACT_RE_DEPLOYMENT;



TRUNCATE ACTIVITI TABLES;
=========================
truncate table product;
truncate table PROCESS_LOCKING;
truncate table HISTORY_PRODUCT;
truncate table ACT_HI_ACTINST;
truncate table ACT_HI_PROCINST;
truncate table ACT_HI_TASKINST;
truncate table ACT_RU_EXECUTION;
truncate table ACT_RU_IDENTITYLINK;
truncate table ACT_RU_JOB;
truncate table ACT_RU_TASK;
truncate table ACT_RU_VARIABLE;
COMMIT;
